@model Web.MVC.Models.HoaDon

@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
    var NguoiMuaSelectList = ViewBag.NguoiMuaSelectList as SelectList;

}

<div style="width: 100%; height: 100%; padding: 10px">
    <h2>Update</h2>

    @using (Html.BeginForm("Update", "NguoiDung", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Hoá Đơn</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                <p class="control-label col-md-2"><b>Ngày Tạo</b></p>
                <div class="col-md-10">
                    <input name="NgayTao" class="form-control" type="date" />
                    @Html.ValidationMessageFor(model => model.NgayTao, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <p class="control-label col-md-2"><b>Thanh Toán</b></p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ThanhToan, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ThanhToan, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <p class="control-label col-md-2"><b>Người Mua</b></p>
                <div class="col-md-10">
                    @Html.DropDownList("Ten", NguoiMuaSelectList, new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.NguoiMua, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Update" class="btn btn-success" />
                    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    }
</div>