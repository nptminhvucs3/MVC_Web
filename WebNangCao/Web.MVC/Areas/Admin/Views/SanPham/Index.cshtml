@model IEnumerable<Web.MVC.Models.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}

<div style="width: 100%; height: 100%; padding: 10px">
    <h3>Danh Sách Sản Phẩm</h3>
    <table class="table">
        <tr>
            <th>
                Tên
            </th>
            <th>
                Ảnh
            </th>
            <th>
                Số Lượng
            </th>
            <th>
                Đơn Giá Bán
            </th>
            <th>
                Đơn Giá Nhập
            </th>
            <th>
                Ngày Nhập
            </th>
            <th>
                Nhà Sản Xuất
            </th>
            <th>
               Chức Năng
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenSP)
                </td>
                <td>
                    <img src="@item.Anh" width="100px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DonGiaBan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DonGiaNhap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayNhap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NhaSanXuat.TenNSX)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Update", "SanPham", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Xóa", "Delete", "SanPham", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
    <p>
        @Html.ActionLink("Create", "Create", null, new { @class = "btn btn-success" })
    </p>
</div>
